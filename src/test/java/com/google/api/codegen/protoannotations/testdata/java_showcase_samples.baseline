package com.google.showcase.examples.v1beta1;

import com.google.showcase.v1beta1.EchoClient;
import com.google.showcase.v1beta1.EchoRequest;
import com.google.showcase.v1beta1.EchoResponse;

public class ShowcaseEchoSample {
  // [START showcase_echo_sample]
  /*
   * Please include the following imports to run this sample.
   *
   * import com.google.showcase.v1beta1.EchoClient;
   * import com.google.showcase.v1beta1.EchoRequest;
   * import com.google.showcase.v1beta1.EchoResponse;
   */

  /** Send something to the server and print the echoed text from the server */
  public static void sampleEcho() {
    try (EchoClient echoClient = EchoClient.create()) {
      String content = "echo this back!";
      EchoRequest request = EchoRequest.newBuilder()
        .setContent(content)
        .build();
      EchoResponse response = echoClient.echo(request);
      // the content echoed back from the server
      String content = response.getContent();
      System.out.printf("The server echoes: %s\n", content);
    } catch (Exception exception) {
      System.err.println("Failed to create the client due to: " + exception);
    }
  }
  // [END showcase_echo_sample]

  public static void main(String[] args) {
    sampleEcho();
  }
}
